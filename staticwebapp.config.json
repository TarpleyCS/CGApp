{
  "routes": [
    {
      "route": "/login",
      "redirect": "/.auth/login/aad"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"],
      "statusCode": 302,
      "redirect": "/login"
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/login"
    }
  },
  "navigationFallback": {
    "rewrite": "/index.html"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css",
    ".ico": "image/x-icon"
  }
}